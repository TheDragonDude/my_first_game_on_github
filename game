    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        let cost = 20
        var num = 0
        let increase = 1
        $('.number').text(num)
        $('.btn').click(()=>{
            num += increase
            $('.number').text(num)  
        })
        $('.shop button').click(()=> {
            $('.dark').toggle()
        })
        $('.2c').click(()=>{
            if (num < cost ){
                alert('No')
                return
            }
            num=num-cost
            cost=cost*3
            $('.menu p').text(String(cost) + ' Cookie')
            $('.number').text(num)

            increase = 2 * increase
        })
    </script>
